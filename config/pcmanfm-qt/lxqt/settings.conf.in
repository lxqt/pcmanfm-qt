[System]
IconThemeName=elementary
FallbackIconThemeName=breeze
SuCommand=lxsudo dbus-run-session -- %s
Archiver=lxqt-archiver
SIUnit=false
Terminal=qterminal

[Behavior]
BookmarkOpenMethod=0
UseTrash=true
SingleClick=false
ConfirmDelete=true

[Desktop]
DesktopShortcuts=Home, Trash, Computer, Network
WallpaperMode=stretch
Wallpaper=@LXQT_SHARE_DIR@/wallpapers/waves-logo.png
BgColor=#000000
FgColor=#ffffff
ShadowColor=#000000
ShowHidden=false
SortOrder=ascending
SortColumn=name
Font="Sans Serif,12,-1,5,50,0,0,0,0,0"

[Volume]
MountOnStartup=true
MountRemovable=true
AutoRun=true

[FolderView]
Mode=icon
ShowHidden=false
SortOrder=ascending
SortColumn=name
BigIconSize=48
SmallIconSize=24
SidePaneIconSize=24
ThumbnailIconSize=128

[Window]
FixedHeight=600
FixedWidth=800
LastWindowHeight=600
LastWindowWidth=800
RememberWindowSize=true
AlwaysShowTabs=false
ShowTabClose=true
SplitterPos=250
SidePaneMode=0

[Thumbnail]
ShowThumbnails=true
MaxThumbnailFileSize=4096
ThumbnailLocalFilesOnly=true
